{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Restore",
      "type": "shell",
      "command": "dotnet restore",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Build Solution",
      "type": "shell",
      "command": "dotnet build --no-restore",
      "dependsOn": "Restore",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": "$msCompile",
      "group": "build"
    }
  ]
}
